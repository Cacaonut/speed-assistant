<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:context=".MainActivity"
    android:keepScreenOn="true">

    <ImageView
        android:id="@+id/imageView_sign"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@drawable/speed_sign_de" />

    <ImageView
        android:id="@+id/imageView_sign_small"
        android:layout_width="230dp"
        android:layout_height="230dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_sign"
        app:layout_constraintEnd_toEndOf="@+id/imageView_sign"
        app:layout_constraintStart_toStartOf="@+id/imageView_sign"
        app:layout_constraintTop_toTopOf="@+id/imageView_sign" />

    <TextView
        android:id="@+id/textView_road"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Searching road..."
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_sign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_sign"
        app:layout_constraintTop_toTopOf="@+id/imageView_sign"
        app:layout_constraintVertical_bias="0.35" />

    <TextView
        android:id="@+id/textView_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_sign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_sign"
        app:layout_constraintTop_toTopOf="@+id/imageView_sign"
        app:layout_constraintVertical_bias="0.7" />

    <ImageButton
        android:id="@+id/button_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_start" />

    <ImageButton
        android:id="@+id/button_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="14dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_settings" />

</androidx.constraintlayout.widget.ConstraintLayout>